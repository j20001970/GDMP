<?xml version="1.0" encoding="UTF-8" ?>
<class name="MediaPipeGestureRecognizer" inherits="MediaPipeVisionTask" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/godotengine/godot/master/doc/class.xsd">
	<brief_description>
		MediaPipe gesture recognizer task.
	</brief_description>
	<description>
		MediaPipe vision task for performing hand gesture recognition on the given image.
	</description>
	<tutorials>
	</tutorials>
	<methods>
		<method name="initialize">
			<return type="bool" />
			<param index="0" name="base_options" type="MediaPipeTaskBaseOptions" />
			<param index="1" name="running_mode" type="int" enum="MediaPipeVisionTask.RunningMode" default="1" />
			<param index="2" name="num_hands" type="int" default="1" />
			<param index="3" name="min_hand_detection_confidence" type="float" default="0.5" />
			<param index="4" name="min_hand_presence_confidence" type="float" default="0.5" />
			<param index="5" name="min_tracking_confidence" type="float" default="0.5" />
			<description>
				Initializes the gesture recognizer.
			</description>
		</method>
		<method name="recognize">
			<return type="MediaPipeGestureRecognizerResult" />
			<param index="0" name="image" type="MediaPipeImage" />
			<param index="1" name="region_of_interest" type="Rect2" default="Rect2(0, 0, 0, 0)" />
			<param index="2" name="rotation_degrees" type="int" default="0" />
			<description>
				Performs hand gesture recognition on [param image].
				Only use this method when the task is initialized with [constant MediaPipeVisionTask.RUNNING_MODE_IMAGE].
			</description>
		</method>
		<method name="recognize_async">
			<return type="bool" />
			<param index="0" name="image" type="MediaPipeImage" />
			<param index="1" name="timestamp_ms" type="int" />
			<param index="2" name="region_of_interest" type="Rect2" default="Rect2(0, 0, 0, 0)" />
			<param index="3" name="rotation_degrees" type="int" default="0" />
			<description>
				Sends [param image] to perform hand gesture recognition.
				Only use this method when the task is initialized with [constant MediaPipeVisionTask.RUNNING_MODE_LIVE_STREAM].
			</description>
		</method>
		<method name="recognize_video">
			<return type="MediaPipeGestureRecognizerResult" />
			<param index="0" name="image" type="MediaPipeImage" />
			<param index="1" name="timestamp_ms" type="int" />
			<param index="2" name="region_of_interest" type="Rect2" default="Rect2(0, 0, 0, 0)" />
			<param index="3" name="rotation_degrees" type="int" default="0" />
			<description>
				Performs hand gesture recognition on video frame [param image].
				Only use this method when the task is initialized with [constant MediaPipeVisionTask.RUNNING_MODE_VIDEO].
			</description>
		</method>
	</methods>
	<signals>
		<signal name="result_callback">
			<param index="0" name="result" type="MediaPipeGestureRecognizerResult" />
			<param index="1" name="image" type="MediaPipeImage" />
			<param index="2" name="timestamp_ms" type="int" />
			<description>
				Emitted when gesture recognizer initialized with [constant MediaPipeVisionTask.RUNNING_MODE_LIVE_STREAM] returns recognition result.
			</description>
		</signal>
	</signals>
</class>
